---
import { Download } from "lucide-astro";
import profile from "../data/profile.json";
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">My Resume</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        View or download my complete resume to learn more about my experience
        and qualifications.
      </p>
    </div>

    <div
      class="max-w-4xl mx-auto bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50"
    >
      <div
        class="aspect-[8.5/11] w-full bg-white rounded-lg overflow-hidden mb-6"
      >
        <iframe src={profile.resumeUrl} class="w-full h-full" title="Resume"
        ></iframe>
      </div>

      <div class="flex justify-center">
        <a
          href={profile.resumeUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-accent hover:bg-accent/80 text-white rounded-md font-medium flex items-center gap-2 transition-colors"
        >
          <Download class="w-5 h-5" />
          Download Resume
        </a>
      </div>
    </div>
  </div>
</section>
