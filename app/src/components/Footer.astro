---
import { Github, Linkedin, Mail, Twitter } from "lucide-astro";
import profile from "../data/profile.json";
---

<footer class="bg-gray-900 border-t border-gray-800 py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">{profile.name}</h3>
        <p class="text-gray-400 mb-4">{profile.title}</p>
        <p class="text-gray-400">{profile.bio}</p>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/#about"
              class="text-gray-400 hover:text-white transition-colors">About</a
            >
          </li>
          <li>
            <a
              href="/#skills"
              class="text-gray-400 hover:text-white transition-colors">Skills</a
            >
          </li>
          <li>
            <a
              href="/#projects"
              class="text-gray-400 hover:text-white transition-colors"
              >Projects</a
            >
          </li>
          <li>
            <a
              href="/#contact"
              class="text-gray-400 hover:text-white transition-colors"
              >Contact</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Connect</h3>
        <div class="flex gap-4">
          <a
            href={profile.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <Github class="w-6 h-6" />
          </a>
          <a
            href={profile.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <Linkedin class="w-6 h-6" />
          </a>
          <a
            href={profile.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Twitter"
          >
            <Twitter class="w-6 h-6" />
          </a>
          <a
            href={`mailto:${profile.social.email}`}
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Email"
          >
            <Mail class="w-6 h-6" />
          </a>
        </div>
      </div>
    </div>

    <div
      class="mt-8 pt-6 border-t border-gray-800 text-center text-gray-500 text-sm"
    >
      <p>Â© {new Date().getFullYear()} {profile.name}. All rights reserved.</p>
      <p class="mt-2">
        <a
          href="https://github.com/mohitnair/portfolio"
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent hover:underline"
        >
          View Source Code
        </a>
      </p>
    </div>
  </div>
</footer>
