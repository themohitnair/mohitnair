---
import { Heart } from "lucide-astro";
import interests from "../data/interests.json";
---

<section id="interests" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Interests & Hobbies</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        When I'm not creating, here's what keeps me busy and inspired.
      </p>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6"
    >
      {
        interests.interests.map((interest) => (
          <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-accent/50 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10 flex flex-col items-center text-center group">
            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mb-4 group-hover:bg-accent/30 transition-colors">
              <Heart class="w-8 h-8 text-accent" />
            </div>

            <h3 class="text-lg font-semibold mb-2 group-hover:text-accent transition-colors">
              {interest.name}
            </h3>
            <p class="text-gray-400 text-sm">{interest.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
