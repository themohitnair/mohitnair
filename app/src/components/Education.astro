---
import { Calendar, MapPin, School } from 'lucide-astro';
import education from '../data/education.json';
---

<section id="education" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Education Journey</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        My academic background and educational qualifications.
      </p>
    </div>
    
    <div class="relative max-w-3xl mx-auto">
      <!-- Timeline line -->
      <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-accent via-accent/50 to-gray-700 transform md:translate-x-px"></div>
      
      {education.institutions.map((institution, index) => (
        <div class={`relative flex flex-col md:flex-row gap-8 mb-12 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
          <!-- Timeline dot -->
          <div class="absolute left-0 md:left-1/2 top-0 w-5 h-5 rounded-full bg-accent border-4 border-gray-900 transform -translate-x-2 md:-translate-x-2.5"></div>
          
          <!-- Content -->
          <div class="md:w-1/2 ml-8 md:ml-0 md:px-8">
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-accent/30 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10">
              <div class="flex items-center gap-2 mb-2">
                <School class="w-5 h-5 text-accent" />
                <h3 class="text-xl font-semibold">{institution.name}</h3>
              </div>
              
              <p class="text-lg font-medium mb-1">{institution.degree}</p>
              
              <div class="flex items-center gap-2 text-gray-400 mb-3">
                <Calendar class="w-4 h-4" />
                <span>{institution.years}</span>
              </div>
              
              <div class="flex items-center gap-2 text-gray-400 mb-3">
                <MapPin class="w-4 h-4" />
                <span>{institution.location}</span>
              </div>
              
              <p class="text-gray-300">{institution.description}</p>
            </div>
          </div>
          
          <!-- Year indicator for mobile -->
          <div class="md:hidden flex items-center gap-2 text-accent font-semibold ml-8">
            <Calendar class="w-4 h-4" />
            <span>{institution.years}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

