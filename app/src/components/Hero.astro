---
import { Mouse, Linkedin, Github } from "lucide-astro";
import profile from "../data/profile.json";
---

<section class="relative min-h-[90vh] flex items-center py-16">
  <div
    class="absolute inset-0 bg-gradient-to-b from-background-dark to-gray-900 -z-10"
  >
  </div>

  <div id="particles-js" class="absolute inset-0 -z-5"></div>

  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
          Hi, I'm <span class="text-accent"
            >{profile.name.split(" ")[0]} {profile.name.split(" ")[1]}</span
          >
        </h1>
        <h2 class="text-2xl md:text-3xl text-gray-300 mb-6">{profile.title}</h2>
        <p class="text-gray-400 text-lg mb-8 max-w-lg">{profile.bio}</p>

        <div class="flex flex-wrap gap-4">
          <a
            href={profile.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-accent hover:bg-accent/80 text-white rounded-md font-medium flex items-center gap-2 transition-colors"
          >
            <Linkedin class="w-5 h-5" />
            Connect on LinkedIn
          </a>

          <a
            href={profile.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-md font-medium flex items-center gap-2 transition-colors"
          >
            <Github class="w-5 h-5" />
            Follow on GitHub
          </a>
        </div>

        <div class="mt-12 flex items-center gap-2 text-gray-400">
          <Mouse class="w-5 h-5" />
          <span>Scroll down to explore</span>
        </div>
      </div>

      <div class="order-1 lg:order-2 flex justify-center">
        <div class="relative">
          <div
            class="w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden border-4 border-accent/30 relative z-10"
          >
            <img
              src={profile.image || "/placeholder.svg"}
              alt={profile.name}
              class="w-full h-full object-cover"
              onerror="this.src='/images/profile-placeholder.jpg'"
            />
          </div>

          <div class="absolute inset-0 rounded-full bg-accent/20 blur-xl -z-10">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", () => {
    const scrollIndicator = document.querySelector(".hero-scroll-indicator");
    if (scrollIndicator) {
      setInterval(() => {
        scrollIndicator.classList.toggle("translate-y-1");
      }, 1000);
    }
  });
</script>
